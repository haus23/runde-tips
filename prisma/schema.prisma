generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int @id @default(autoincrement())

  name String
  slug String @unique

  role String
  email String? @unique
}

model League {
  id   Int    @id @default(autoincrement())
  slug String @unique

  name      String
  shortname String
}

model Team {
  id   Int    @id @default(autoincrement())
  slug String @unique

  name      String
  shortname String
}
