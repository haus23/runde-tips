{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    // Type checking
		"strict": true,
		"noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

		// Language / Environment
		"target": "ES2022",
		"jsx": "react-jsx",
		"moduleDetection": "force",

		// Modules
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"#*": [
				"./*"
			]
		},

		// Interop
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		// Emit
		"noEmit": true
  }
}
