{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,

    // Module
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "paths": {
      "#*": ["./*"]
    },

    // Output
    "target": "ES2022",
    "noEmit": true
  }
}
